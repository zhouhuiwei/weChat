.headImg {
  display: block; 
  width: 150rpx;
  height: 150rpx;
  margin-left: auto;
  margin-right: auto;
  margin-top: 30rpx;
  border-radius: 50%;
}
.username {
  width: 500rpx;
  margin: 20rpx auto;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.ico,.more {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
}
.ico {
  margin-left: 40rpx;
}

.text {
  display: inline-block;
  font-size: 34rpx;
  vertical-align: middle;
  width: 70%;
  height: 50rpx;
  line-height: 50rpx;
  margin-left: 25rpx;
}
navigator {
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  box-sizing: border-box;
  height: 130rpx;
}
.fenge {
  width: 100%;
  height: 1rpx;
  background-color: black;
}
button {
  margin-top: 30rpx;
}