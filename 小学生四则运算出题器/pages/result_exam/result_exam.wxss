/* pages/result/result.wxss */
.title {
  font-size: 36rpx;
  margin-bottom: 26rpx;
  text-align: center;
}
.description {
  font-size: 40rpx;
  margin-bottom: 26rpx;
}
.result {
  margin-top: 23rpx;
}
.timu,
.answer,
.correct_result,
.judge {
  font-size: 36rpx;
  height: 50rpx;
  line-height: 50rpx;
  display: inline-block;
  box-sizing: border-box;
}
.timu {
  padding-left: 4%; 
  width: 50%;
}
.answer {
  width: 16%;
}
.correct_result {
  width: 16%;
}
.judge {
  width: 14%;
}

.head>image {
  display: block;
  border-radius: 50%;
  height: 120rpx;
  width: 120rpx;
  margin-right: auto;
  margin-left: auto;
}
button {
  margin-top: 10rpx;
}