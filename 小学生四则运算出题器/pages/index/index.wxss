/**index.wxss**/

.clearfix::before,
.clearfix::after {
  content: "";
  display: table;
}
.clearfix::after {
  clear: both;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}
.usermotto {
  margin-top: 200px;
}
view {
  transition: all 1s;
}
.title {
  margin-top: 20rpx;
  font-size: 40rpx;
  color: gray;
  /* background-color: pink; */
  text-align: center;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}
.shuoming {
  font-size: 20rpx;
  margin: 20rpx;
}
.peizhi-item {
  display: flex;
  margin: 4%;
  width: 92%;
  align-items: center;
  justify-content: center;
  /* border-bottom: 1rpx solid black; */
}
.peizhi-item-left {
  display: flex;
  flex-direction: column;
  width: 80%;
}
.peizhi-item-middle {
  width: 15%;
}
.peizhi-item-right {
  width: 5%;
}
.peizhi-item-right2 {
  width:20%;
}
.peizhi-item-left>view:nth-child(1) {
  font-size: 30rpx;
}
.peizhi-item-left>view:nth-child(2) {
  font-size: 24rpx;
  color: gray;
}
.line {
  margin: 2%;
  width: 96%;
  height: 2rpx;
  background-color: gray;
}
.yunsuanfu {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 200rpx;
  background-color: white; 
}

.yunsuanfu>checkbox-group {
  height: 60%;
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 40rpx;
}
.yunsuanfu>view {
  height: 40%;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}
.cancel {
  margin-left: 30rpx;
  margin-top: 15rpx;
  color: grey;
}
.confirm {
  margin-right: 30rpx;
  margin-top: 15rpx;
  color: greenyellow;
}
.yunsuanfu button {
  background-color: rgba(red, green, blue, 0);
}